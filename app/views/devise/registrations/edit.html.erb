<%= link_to 'Back', 'javascript:history.back()', class: 'orange_button' %>

<div class="form-container mt-5">
  <h2>Modifier votre profil</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs mt-3">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Laissez le champ vide si vous ne souhaitez pas le modifier",
                  required: false,
                  input_html: { autocomplete: "new-password" },
                  label: 'Nouveau mot de passe' %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" },
                  label: 'Confirmation nouveau mot de passe' %>
      <%= f.input :photo, as: :file %>
      <%= f.input :current_password,
                  hint: "Veuillez entrer votre mot de passe pour confirmer votre identitÃ©",
                  required: true,
                  input_html: { autocomplete: "current-password" },
                  label: 'Mot de passe actuel' %>
    </div>

    <div class="form-actions d-flex justify-content-center mb-3">
      <%= f.button :submit, "MODIFIER PROFIL", class: 'orange_button' %>
    </div>
  <% end %>

  <p>Insatisfait?</p>
  <%= link_to "Supprimer mon compte",
              registration_path(resource_name),
              data: { confirm: "Are you sure?" },
              method: :delete,
              class: 'fromleft' %>


</div>
