<%= link_to 'Back', 'javascript:history.back()', class: 'orange_button' %>
<h1 class='mt-5 mb-5'>Modifications de votre garantie</h1>

<%= simple_form_for(@invoice) do |f| %>
  <%= f.input :purchase_date, as: :date, html5: true %>
  <%= f.input :number_year_warranty %>
  <%= f.input :brand_name %>
  <%= f.input :product_name %>
  <%= f.input :product_category %>
  <%= f.input :document, as: :file %>
  <%= f.submit %>
<% end %>
